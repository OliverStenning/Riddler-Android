<resources>

    <!-- Main Game Theme -->
    <style name="GameTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Question ProgressBar -->
    <style name="QuestionProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/pb_progress</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>

    <!-- Styleable Info Toast -->
    <style name="infoToast">
        <item name="stTextColor">@color/colorPrimaryDark</item>
        <item name="stFont">@font/abel</item>
        <item name="stColorBackground">@color/colorAccent</item>
        <item name="stLength">LONG</item>
        <item name="stRadius">2dp</item>
    </style>

    <!-- Styleable Error Toast -->
    <style name="errorToast">
        <item name="stTextColor">@color/colorPrimaryDark</item>
        <item name="stFont">@font/abel</item>
        <item name="stColorBackground">@color/colorError</item>
        <item name="stLength">LONG</item>
        <item name="stRadius">2dp</item>
    </style>

</resources>
